@page
@model ArtShop.Pages.Login.IndexModel
@{
    Layout = "_Layout2";
}
<div class="form-box test-center container">
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="message">@Model.Message</div>
    }
    <h2>Login</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="LoginInput.username">Username or Email</label>
            <input asp-for="LoginInput.username" type="text" id="login-username-email" name="username" required>
        </div>
        <div class="form-group">
            <label asp-for="LoginInput.password" for="login-password">Password</label>
            <input asp-for="LoginInput.password" type="password" id="login-password" name="password" required>
        </div>
        <button type="submit" asp-page-handler="Login" class="btn">Login</button>
    </form>
    <div class="switch-link">
        Don't have an account? <a href="register/index">Register here</a>
    </div>
</div>