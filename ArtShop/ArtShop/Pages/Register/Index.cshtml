@page
@model ArtShop.Pages.Register.IndexModel
@{
    Layout = "_Layout2";
}
<div class="form-box test-center container">
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="message">@Model.Message</div>
    }
    <h2>Register</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="RegisterInput.Username">Username</label>
            <input asp-for="RegisterInput.Username" type="text" id="login-username-email" name="username" required>
        </div>
        <div class="form-group">
            <label asp-for="RegisterInput.Email">Email</label>
            <input asp-for="RegisterInput.Email" type="text" id="login-username-email" name="email" required>
        </div>
        <div class="form-group">
            <label asp-for="RegisterInput.Password" for="login-password">Password</label>
            <input asp-for="RegisterInput.Password" type="password" id="login-password" name="password" required>
        </div>
        <button type="submit" asp-page-handler="Register" class="btn">Register</button>
    </form>
    <div class="switch-link">
        Don't have an account? <a href="register/index">Register here</a>
    </div>
</div>